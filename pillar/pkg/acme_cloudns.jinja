pkg:
  acme:
    when: 'PKG_BEFORE_DEPLOY'
    states:
      - git.latest:
          acme:
            - name: https://github.com/Neilpang/acme.sh.git
            - target: /opt/acme/git
            - force_reset: True
            - force_fetch: True
      - file.directory:
          1:
            - name: /opt/acme/home
            - makedirs: True
          2:
            - name: /opt/acme/cert
            - makedirs: True
          3:
            - name: /opt/acme/config
            - makedirs: True
      - cmd.run:
          1:
            - name: '/opt/acme/git/acme.sh --home /opt/acme/home --cert-home /opt/acme/cert --config-home /opt/acme/config --install'
            - runas: root
            - cwd: /opt/acme/git
      - environ.setenv:
          1:
            - name: CLOUDNS_AUTH_ID
            - value: "{{ acme_auth_id }}"
            - update_minion: True
          2:
            - name: CLOUDNS_AUTH_PASSWORD
            - value: "{{ acme_auth_password }}"
            - update_minion: True
      - file.managed:
          1:
            - name: '/opt/acme/home/acme_local.sh'
            - contents: |
                #!/bin/bash
                export CLOUDNS_AUTH_ID="{{ acme_auth_id }}"
                export CLOUDNS_AUTH_PASSWORD="{{ acme_auth_password }}"
                /opt/acme/home/acme.sh --home /opt/acme/home --cert-home /opt/acme/cert --config-home /opt/acme/config {{ acme_mode }} "$@"
