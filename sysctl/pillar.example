sysctl:

  config: # optional, state cofig override, f.e. override installed pkg name
    pkg: procps #optional, the default

  default: # default filename means default for the salt.states.sysctl state
           # usually /etc/sysctl.d/99-salt.conf
    vm.swappiness: 20
    net.ipv4.tcp_syncookies: 0
    net.core.somaxconn: 4096
    net.ipv4.tcp_max_syn_backlog: 8192

  /etc/sysctl.d/99-file.conf:  # filename
    fs.file-max: 100000        # values


# Minimal viable examples
sysctl:
  /etc/sysctl.conf:
    vm.swappiness: 10

sysctl:
  default:
    vm.swappiness: 10
